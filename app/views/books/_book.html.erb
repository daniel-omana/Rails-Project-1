<h2 class="title is-2">
  <% if show_link %>
    <%= link_to book.title, book %>
  <% else %>
    <%= book.title %>
  <% end %>
</h2>

<p>
  <strong>Rating: </strong>
  <%= book.rating %> <progress class="progess is-info" value="<%= book.rating %>" max=5></progress>
</p>

<p>
  <strong>ISBN: </strong>
  <%= book.isbn %>
</p>

<p>
  <strong>ISBN13: </strong>
  <%= book.isbn13 %>
</p>

<p>
  <strong>Number of Pages: </strong>
  <%= book.number_of_pages %>
</p>

<p>
  <strong>Publisher: </strong>
  <%= link_to book.publisher.name, book.publisher %>
</p>

<% if book.users.count != 0 %>
  <p>
    <strong>Favourited by: </strong>
  </p>
  <ol class="type=I">
    <% book.users.each do |user|%>
      <li class="ml-5">
        <%= link_to user.name, user %>
      </li>
    <%end%>
  </ol>
<%end%>
<hr>